<Window x:Class="ConLanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConLanger"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Frame x:Name="mainFrame" Content="There should be a page here, one moment." HorizontalAlignment="Stretch" Margin="10,35,10,10" VerticalAlignment="Stretch" />
        <Button x:Name="LangButton" Content="Languages" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,10,0,0" Click="LangButton_Click"/>
        <Button x:Name="PhoneButton" Content="Phonetics" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="90,10,0,0" Click="PhoneButton_Click"/>
        <Button x:Name="WordsButton" Content="Words" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="170,10,0,0" Click="WordsButton_Click"/>
        <Button x:Name="LexiconButton" Content="Lexicon" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="250,10,0,0" Click="LexiconButton_Click"/>

    </Grid>
</Window>
