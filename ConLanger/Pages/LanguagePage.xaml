<Page x:Class="ConLanger.Pages.LanguagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ConLanger.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LanguagePage">

    <Grid>
        <Label x:Name="PageTitle" Content="Language Overview" HorizontalAlignment="center" Margin="0,10,0,0" VerticalAlignment="Top"
               FontSize="24" FontWeight="Heavy"/>
        <Label x:Name="CurrentLanguageLabel" Content="No Language Selected" HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top"/>
        <Button x:Name="CreateNewLanguageButton" Content="Create New Language" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="129" Click="CreateNewLanguageButton_Click"/>
        <TextBox x:Name="NewLanguageTextBox" HorizontalAlignment="Left" Height="23" Margin="10,0,0,35" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="129"/>

    </Grid>
</Page>
